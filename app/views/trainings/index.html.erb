<%= render "shared/header2" %>
<h1>トレーニング記録</h1>
<h4 class="sign-up-ja">※<span class="required-input">必須</span>項目を入力し<span class="claim">記録する</span>をクリックして下さい</h4><br>
<div class="training-form">
  <%# 顧客の情報表示はトレーニング入力機能実装後に対応 %>
  <%# <div class="training-customer-date">
    <div class="training-form-image-box">
    </div>
    <div class="training-form-first">
    </div>
  </div> %>
  <%# 顧客の情報表示はトレーニング入力機能実装後に対応 %>
  <%=form_with  url: "#" , local: true do |f| %>
  <div class="training-record">
    <div class="weight-body-fat">
      <div class="weight">
        <div class= "training-item-title" >体重:</div>
        <%= f.number_field :hoge ,placeholder: "体重", class: "training-input-form" %><span class="unit">kg</span>
      </div>
      <div class="body-fat">
        <div class= "training-item-title" >体脂肪:</div>
        <%= f.number_field :hoge , placeholder: "体脂肪" , class: "training-input-form"%><span class="unit">%</span>
      </div>
    </div>  
    <div class="blood">
      <div class="blood-max">
        <div class= "training-item-title" >最高血圧:</div>
        <%= f.number_field :hoge , placeholder: "最高血圧" , class: "training-input-form"%><span class="unit" >mmHg</span>
      </div>
      <div class="blood-min">
        <div class= "training-item-title">最高血圧:</div>
        <%= f.number_field :hoge , placeholder: "最低血圧" , class: "training-input-form"%><span class="unit" >mmHg</span>
      </div>
      <div class="pulse">
        <div class= "training-item-title" >脈拍:</div>
        <%= f.number_field :hoge , placeholder: "脈拍" , class: "training-input-form"%><span class="unit" >bpm</span>
      </div>
    </div>
    <div class="training-menu">
      <div class="part menu">
        ■トレーニングメニュー<br>
        <ul class= "part">
          <li><%= f.check_box :hoge %>胸</li>
          <li><%= f.check_box :hoge %>背中</li>
          <li><%= f.check_box :hoge %>肩</li>
          <li><%= f.check_box :hoge %>腕</li>
          <li><%= f.check_box :hoge %>腹筋</li>
          <li><%= f.check_box :hoge %>脚</li>
          <li><%= f.check_box :hoge %>その他</li>
        </ul>
      </div>
      <div class="remarks">
        <%= f.text_area :hoge , placeholder: "備考" , class: "training-text" %>
      </div>
    </div>
  </div>
    <%= f.submit "記録する", class: "recording-btn" %>
  <% end %>
</div>